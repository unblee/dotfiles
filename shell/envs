. "$(dirname $0)/funcs"

export DOTFILES="${HOME}/dotfiles"

# Support XDG Base Directory
# https://specifications.freedesktop.org/basedir-spec/basedir-spec-latest.html
export XDG_CONFIG_HOME="${HOME}/.config"
export XDG_DATA_HOME="${HOME}/.local/share"
export XDG_STATE_HOME="${HOME}/.local/state"
export XDG_CACHE_HOME="${HOME}/.cache"
export XDG_DATA_DIRS="/usr/local/share/:/usr/share/"
export XDG_CONFIG_DIRS="/etc/xdg"

# Pager
export PAGER=less

# エディタ設定
export EDITOR=vim

# 区切り文字の設定
export WORDCHARS='*?_-.[]~=&;!#$%^(){}<>'

# ヒストリ設定
export HISTFILE="$HOME/.zsh_history"
export HISTSIZE=1000000
export SAVEHIST=1000000

# Go
export GOPATH="$HOME/workspace"
export PATH="$GOPATH/bin:$PATH"

# user local bin path
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/local/bin:$PATH"

# ghq
export GHQ_ROOT="$GOPATH/src"

# rust/cargo
export PATH="${HOME}/.cargo/bin:${PATH}"

# pipenv
export PIPENV_SHELL_FANCY=1

# composer
export PATH="${HOME}/.config/composer/vendor/bin:${PATH}"

# krew
export PATH="${PATH}:${HOME}/.krew/bin"

# clangd
export PATH="/usr/local/opt/llvm/bin:$PATH"

# fzf
export FZF_DEFAULT_COMMAND='fd --hidden --exclude=".git"'

# poetry
export PATH="$HOME/.poetry/bin:$PATH"

# google cloud sdk
export PATH=$HOME/local/google-cloud-sdk/bin:$PATH
[[ -f "$HOME/local/google-cloud-sdk/completion.zsh.inc" ]] && . "$HOME/local/google-cloud-sdk/completion.zsh.inc"

# local bin
export PATH="$HOME/bin:$PATH"

# aws sdk
export AWS_SDK_LOAD_CONFIG=1

# brew commands
if _has brew; then
  export PATH="$(brew --prefix)/opt/curl/bin:$PATH"
  export PATH="$(brew --prefix)/opt/gnu-sed/libexec/gnubin:$PATH"
  export GUILE_TLS_CERTIFICATE_DIRECTORY=$(brew --prefix)/etc/gnutls/
  export PATH="$(brew --prefix)/opt/llvm/bin:$PATH"
  export PATH="$(brew --prefix)/opt/make/libexec/gnubin:$PATH"
  export PATH="$(brew --prefix)/opt/ruby/bin:$PATH"
  export PATH="$(brew --prefix)/opt/gnu-time/libexec/gnubin:$PATH"
fi

# 1Password SSH agent
export SSH_AUTH_SOCK=~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock
